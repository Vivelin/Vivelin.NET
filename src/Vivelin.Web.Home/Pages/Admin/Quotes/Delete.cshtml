@page "{id:int}"
@model Vivelin.Web.Home.Pages.Admin.Quotes.DeleteModel

@{
    ViewData["Title"] = "Delete quote";
}

<h1>Delete quote</h1>

<component type="typeof(Vivelin.Web.Home.Shared.QuoteDisplay)"
           render-mode="Static"
           param-Quote="Model.Quote" />

<form method="post">
    <p>Are you sure you want to delete this quote?</p>
    <input type="hidden" asp-for="Quote.Id" />
    <p>
        <input type="submit" value="Delete" class="warning" />
        <a asp-page="./Index" class="link-button">Cancel</a>
    </p>
</form>
