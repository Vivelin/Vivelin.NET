<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].SourceHref)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].PageNumber)
